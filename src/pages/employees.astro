		position: "Field Supervisor",
		fatherName: "Guriqbal Singh",
		motherName: "Nirmal Kaur",
		dob: "2002-01-02",
		photo: "/employees/jasprit-singh.png", // Replace with actual photo URL if available
	},
	{
		name: "Harvinder Kaur",
		employeeId: "FCTC1001/BH1/001/24",
		position: "Branch Head",
		fatherName: "Sadhu Singh",
		motherName: "Jasveer Kaur",
		dob: "1982-10-05",
		photo: "/employees/harvinder-kaur.png", // Replace with actual photo URL if available
	},
	{
		name: "Jaswinder Singh",
		employeeId: "FSTC1001/ZH/01/24",
		position: "Zonal Head",
		fatherName: "Gurjeet Singh",
