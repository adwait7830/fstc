---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta
			name="google-site-verification"
			content="xqbnuiidq7byLdXwOniBtrMlt70iempcMnH1_BN4RNY"
		/>
		<meta
			name="description"
			content="Food Safety Training Corporation is a leading provider of food safety training in India, offering expert courses and certifications for individuals and organizations."
		/>
		<meta
			name="keywords"
			content="Food Safety Training, Food Safety Certification, Food Safety Courses, Food Safety India, Food Safety Training Corporation"
		/>
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow" />
		<title>{title}</title>
		<link rel="icon" type="image/png" href="/title-image.png" />
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content="Leading provider of food safety training in India. Our expert courses and certifications are designed to ensure compliance and excellence in food safety."
		/>
		<meta property="og:image" content="/title-image.png" />
		<meta
			property="og:image:alt"
			content="Food Safety Training Corporation Logo"
		/>
		<meta property="og:url" content="https://fstc.vercel.app/" />
		<meta property="og:type" content="website" />
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
